<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="CA" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4r %p %c %x - %m%n" />
			<!-- %-4r [%t] %-5p %c %x - %m%n -->
		</layout>
	</appender>

	<appender name="FA" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="mBankSfi.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
		</layout>
	</appender>

	<logger name="org.hibernate" additivity="false">
		<level value="OFF" />
		<appender-ref ref="FA" />
	</logger>

	<logger name="org.hibernate.SQL">
		<level value="DEBUG" />
		<!--<level value="OFF" /> -->
		<appender-ref ref="CA" />
	</logger>

	<logger name="org.hibernate.type">
		<!--<level value="TRACE" /> -->
		<level value="OFF" />
		<appender-ref ref="CA" />
	</logger>

	<logger name="org.springframework.orm.hibernate3" additivity="false">
		<level value="OFF" />
		<appender-ref ref="FA" />
	</logger>

	<logger name="pl.jw.mbank">
		<level value="INFO" />
	</logger>

	<root>
		<level value="OFF" />
		<appender-ref ref="CA" />
		<appender-ref ref="FA" />
	</root>

</log4j:configuration>